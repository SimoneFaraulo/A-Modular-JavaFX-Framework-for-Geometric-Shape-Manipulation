                                            <ImageView fitHeight="22.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                                                <image>
                                                    <Image url="@img/rectangleIcon.png" />
                                                </image>
                                            </ImageView>
                                        </graphic>
                                    </Button>
                                    <Button fx:id="ellipseBtn" layoutX="65.0" layoutY="10.0" mnemonicParsing="false" onAction="#onEllipseButtonAction" prefHeight="35.0" prefWidth="46.0" style="-fx-background-color: #f5f5f5;">
